profiles {

    standard {
        process.executor = 'local'
        docker.enabled = true
    }
}
process {

    withName: alignFiles {
        cpus = 4
        memory = 4.GB
        container = 'djevtic/bwaandsamtools'
    }
    withName: extractChr20 {
        cpus = 4
        memory = 4.GB
        container = 'djevtic/bwaandsamtools'
    }
    withName: deDuplicate {
        cpus = 4
        memory = 4.GB
        container = 'broadinstitute/gatk'
    }
    withName: reCalibrate {
        cpus = 4
        memory = 4.GB
        container = 'broadinstitute/gatk'
    }
}
